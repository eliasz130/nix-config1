# ─────────────────────────────
# Focus windows
# ─────────────────────────────
cmd + alt + ctrl - left  : yabai -m window --focus west
cmd + alt + ctrl - right : yabai -m window --focus east
cmd + alt + ctrl - up    : yabai -m window --focus north
cmd + alt + ctrl - down  : yabai -m window --focus south

# ─────────────────────────────
# Swap windows
# ─────────────────────────────
cmd + alt + ctrl + shift - left  : yabai -m window --swap west
cmd + alt + ctrl + shift - right : yabai -m window --swap east
cmd + alt + ctrl + shift - up    : yabai -m window --swap north
cmd + alt + ctrl + shift - down  : yabai -m window --swap south

# ─────────────────────────────
# Resize windows (fixed version)
# ─────────────────────────────
cmd + alt + ctrl - a : yabai -m window --resize left:-20:0   # shrink left
cmd + alt + ctrl - d : yabai -m window --resize right:20:0   # grow right
cmd + alt + ctrl - w : yabai -m window --resize top:0:-20    # shrink up
cmd + alt + ctrl - s : yabai -m window --resize bottom:0:20  # grow down

# ─────────────────────────────
# Move window between displays
# ─────────────────────────────
cmd + alt + ctrl - 1 : yabai -m window --display 1
cmd + alt + ctrl - 2 : yabai -m window --display 2
cmd + alt + ctrl - 3 : yabai -m window --display 3

cmd + alt + ctrl + shift - 1 : yabai -m display --focus 1
cmd + alt + ctrl + shift - 2 : yabai -m display --focus 2
cmd + alt + ctrl + shift - 3 : yabai -m display --focus 3