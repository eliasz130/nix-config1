  echo 'ðŸ“¦ Updating Oh My Zsh...' && omz update && \
  echo 'ðŸº Updating Homebrew packages...' && brew update && brew upgrade && \
  echo 'ðŸ Updating Python packages...' && pip3 list --outdated | tail -n +3 | cut -d ' ' -f 1 | xargs -n1 pip3 install -U && \
  echo 'ðŸ’Ž Updating Ruby gems...' && gem update --user-install 2>/dev/null || true && \
  echo 'ðŸ§¹ Cleaning up...' && brew cleanup && brew autoremove && \
  echo 'âœ… All updates complete!'"
